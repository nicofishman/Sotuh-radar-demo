---
import CMS from '../../loadCMS';
import Arrow from '../UI/Arrow.astro';
import Underlined from '../UI/UnderlinedMasked.astro';
---

<div class="w-full px-16 mt-52 flex-col items-center">
	<div class="px-24">
		<h2 class="font-bold">
			<Underlined class="after:bg-primary-green/50" set:html={CMS('overview', 'title')} />
		</h2>

		<div class="flex flex-row gap-5 text-2xl">
			<Arrow class="py-2" />
			<p class="font-medium" set:html={CMS('overview', 'text')}></p>
		</div>
	</div>
</div>
