---
// poner absolut a cada item
import CMS from '../../loadCMS';
import Arrow from '../UI/Arrow.astro';
import ShadowCard from '../UI/ShadowCard.astro';
import Switch from '../UI/Switch';
---

<div class="bg-overview bg-cover bg-no-repeat w-full h-screen relative">
	<div
		class="flex flex-row w-full absolute left-0 top-[4%] pl-6 pr-5 items-center justify-between"
	>
		<div class="flex items-center gap-4">
			<Arrow color="#fff" class="rotate-180" />
			<h4 class="text-white">{CMS('header', 'goBack')}</h4>
		</div>
		<div class="flex items-center gap-4">
			<h6 class="text-white place-self-end mb-0">Dark mode</h6>
			<Switch />
		</div>
	</div>
	<div class="absolute left-36 top-[35%]">
		<h3 class="font-semibold text-white">{CMS('header', 'title')}</h3>
		<h1
			class="md:text-7xl text-4xl font-extrabold text-white mb-20"
			set:html={CMS('header', 'devRadar')}
		>
		</h1>
	</div>
	<div class="absolute left-36 bottom-20">
		<ShadowCard class="min-w-[300px] w-2/5 h-44 py-8 px-10">
			<h6 class="font-semibold">{CMS('header', 'cardTitle')}</h6>
			<h6>
				{CMS('header', 'cardText')}
			</h6>
		</ShadowCard>
	</div>
</div>
