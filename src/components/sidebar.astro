---
import { Sections } from '../sections';
---

<div class="fixed right-0 top-0 h-screen bg-lime-500 max-w-[400px] w-1/3">
	{
		Sections.map((s) => (
			<>
				<a href={`#${s.id}`} class="block p-4 bg-yellow-200 mb-2">
					{s.id}
				</a>
				{s.children?.map((ss) => (
					<a href={`#${ss.id}`} class="block p-4 bg-yellow-200 mb-2 ml-4">
						{ss.id}
					</a>
				))}
			</>
		))
	}
</div>
