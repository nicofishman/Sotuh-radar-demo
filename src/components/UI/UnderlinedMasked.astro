---
import clsx from 'clsx';

const { class: className } = Astro.props;
---

<span class={clsx('myClass relative', className)}>
	<slot />
</span>

<style is:inline>
	.myClass::after {
		position: absolute;
		bottom: -80%;
		left: 0;
		origin: 0 0;
		width: 100%;
		height: 100%;
		content: '';
		-webkit-mask-image: url('./Vector_(1).svg');
		mask-image: url('./Vector_(1).svg');
		-webkit-mask-repeat: no-repeat;
		mask-size: contain;
		-webkit-mask-size: contain;
		mask-repeat: no-repeat;
	}
</style>
